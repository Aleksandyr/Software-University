import java.util.Scanner;


public class P03_Largest3Rectangles {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		String input = in.nextLine();
		String[] nums = input.split("[^0-9]");
		
		int maxSum = Integer.MIN_VALUE;
		int sum = 0;
		int currIndex = 0;
		for (int i = 0; i < nums.length - 5; i++) {
			int fSumTwoNums = Integer.parseInt(nums[i] + nums[i + 1]);
			int sSumOfTwoNums = Integer.parseInt(nums[i + 2] + nums[i + 3]);
			int tSumOfTwoNums = Integer.parseInt(nums[i + 4] + nums[i + 5]);
			
			sum = fSumTwoNums + sSumOfTwoNums + tSumOfTwoNums;
			if (sum > maxSum) {
				maxSum = sum;
				currIndex = i;
			}
		}
		System.out.println(maxSum);
	}

}
